<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/cardMinElevation"
    app:cardCornerRadius="@dimen/cornerRadius"
    app:cardUseCompatPadding="true"
    android:id="@+id/id_steps_cardview">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/paddingTop"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_steps_id"
            android:layout_marginLeft="@dimen/cardElevation"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/id_steps_short_description"
            android:layout_width="@dimen/playerHeight"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/id_play_icon"
            android:layout_toLeftOf="@+id/id_play_icon"
            android:layout_toEndOf="@id/id_steps_id"
            android:layout_toRightOf="@id/id_steps_id" />

        <ImageView
            android:id="@+id/id_play_icon"
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/play"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>