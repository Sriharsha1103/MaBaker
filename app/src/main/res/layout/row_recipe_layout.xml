<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/cardElevation"
    app:cardCornerRadius="@dimen/cornerRadius"
    app:cardUseCompatPadding="true"
    android:background="@drawable/normal_border"
    android:id="@+id/id_recipe_card">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/id_image"
            android:layout_width="@dimen/imageSize"
            android:layout_height="@dimen/imageSize"
            android:layout_marginLeft="@dimen/padding"
            android:contentDescription="@string/recipe_image"
            android:src="@drawable/cooking_pot" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/marginStart"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/marginStart"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/id_recipe_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingTop"
                android:layout_marginLeft="@dimen/padding"
                android:textSize="@dimen/header_font"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/padding" />

            <TextView
                android:id="@+id/id_recipe_servings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:padding="@dimen/paddingTop"
                android:textSize="@dimen/servings_font"
                android:layout_marginStart="@dimen/padding" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>