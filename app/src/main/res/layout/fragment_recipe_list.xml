<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingTop"
        app:cardElevation="@dimen/cardElevation"
        android:layout_margin="@dimen/layoutMargin"
        app:cardCornerRadius="@dimen/cornerRadius">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ingredient_list"
            android:textStyle="bold"
            android:padding="@dimen/paddingMin"
            android:layout_marginLeft="@dimen/marginLeft"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="@dimen/cardElevation" />
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/cardElevation"
            android:layout_margin="@dimen/layoutMargin"
            android:padding="@dimen/paddingTop"
            app:cardCornerRadius="@dimen/cornerRadius"
            app:cardBackgroundColor="@color/colorBackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_ingredient_text"
                android:layout_marginLeft="@dimen/marginLeft"
                android:padding="@dimen/paddingMin"
                android:layout_marginStart="@dimen/marginLeft" />
        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>